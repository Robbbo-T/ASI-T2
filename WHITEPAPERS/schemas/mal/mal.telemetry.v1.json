{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://asi-t2.org/schemas/mal/telemetry/v1",
  "title": "MAL Telemetry v1",
  "description": "MAL Telemetry contract schema for time-series data points with tagging support",
  "type": "object",
  "required": ["points"],
  "properties": {
    "points": {
      "type": "array",
      "minItems": 1,
      "description": "Array of telemetry data points",
      "items": {
        "type": "object",
        "required": ["k", "v"],
        "properties": {
          "k": {
            "type": "string",
            "minLength": 1,
            "description": "Metric key in hierarchical dot notation (e.g., 'wing.load.left.kN')"
          },
          "v": {
            "description": "Metric value (numeric, string, or boolean)",
            "oneOf": [
              {"type": "number"},
              {"type": "string"},
              {"type": "boolean"}
            ]
          },
          "t": {
            "type": "string",
            "format": "date-time",
            "description": "Optional timestamp override (ISO-8601); defaults to envelope timestamp"
          },
          "unit": {
            "type": "string",
            "description": "Optional unit override (e.g., 'K', 'kN', 'ms')"
          }
        },
        "additionalProperties": false
      }
    },
    "tags": {
      "type": "object",
      "description": "Key-value tags for filtering and grouping (e.g., mission, sensor, unit system)",
      "additionalProperties": {
        "type": "string"
      }
    },
    "aggregation": {
      "type": "object",
      "description": "Optional aggregation metadata for pre-computed statistics",
      "properties": {
        "window": {
          "type": "string",
          "description": "Aggregation window (e.g., '1s', '5m', '1h')"
        },
        "method": {
          "type": "string",
          "enum": ["avg", "sum", "min", "max", "count", "p50", "p95", "p99"],
          "description": "Aggregation method applied"
        }
      }
    }
  },
  "additionalProperties": false
}
