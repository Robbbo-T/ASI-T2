<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://www.s1000d.org/csdb/versioning"
           xmlns:tns="http://www.s1000d.org/csdb/versioning"
           elementFormDefault="qualified">
  <xs:element name="versioning">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="git">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="branch">
                <xs:complexType>
                  <xs:attribute name="naming" type="xs:string" use="required"/>
                </xs:complexType>
              </xs:element>
              <xs:element name="tag">
                <xs:complexType>
                  <xs:attribute name="pattern" type="xs:string" use="required"/>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="s1000d">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="issueNumber">
                <xs:complexType>
                  <xs:attribute name="increment" type="xs:string" use="required"/>
                </xs:complexType>
              </xs:element>
              <xs:element name="inWork">
                <xs:complexType>
                  <xs:attribute name="values" type="xs:string" use="required"/>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="mapping">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="rule" maxOccurs="unbounded" type="xs:string"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>