{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QOx Problem Specification Schema",
  "description": "Schema for quantum optimization problem definitions in CAx→QOx bridge",
  "type": "object",
  "required": ["id", "goal", "variables", "objective", "constraints", "bridge"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[A-Z0-9]+(-[A-Z0-9]+)*$",
      "description": "Unique identifier for the optimization problem"
    },
    "goal": {
      "type": "string",
      "description": "Human-readable description of the optimization goal"
    },
    "variables": {
      "type": "object",
      "description": "Definition of optimization variables",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "type": "object",
          "required": ["count", "domain"],
          "properties": {
            "count": {
              "type": "integer",
              "minimum": 1,
              "description": "Number of variables of this type"
            },
            "domain": {
              "type": "string",
              "enum": ["binary", "integer", "continuous"],
              "description": "Variable domain type"
            },
            "meaning": {
              "type": "string",
              "description": "Physical or logical meaning of the variable"
            },
            "bounds": {
              "type": "object",
              "properties": {
                "min": {"type": "number"},
                "max": {"type": "number"}
              },
              "description": "Variable bounds (for non-binary variables)"
            }
          }
        }
      },
      "additionalProperties": false
    },
    "objective": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["term", "weight"],
        "properties": {
          "term": {
            "type": "string",
            "description": "Name of the objective term"
          },
          "weight": {
            "type": "number",
            "description": "Weight coefficient (positive for minimization, negative for maximization)"
          },
          "description": {
            "type": "string",
            "description": "Description of what this term represents"
          }
        }
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "weight"],
        "properties": {
          "type": {
            "type": "string",
            "description": "Constraint type identifier"
          },
          "weight": {
            "type": "number",
            "minimum": 0,
            "description": "Penalty weight for constraint violation"
          },
          "description": {
            "type": "string",
            "description": "Description of the constraint"
          },
          "parameters": {
            "type": "object",
            "description": "Constraint-specific parameters"
          }
        }
      }
    },
    "bridge": {
      "type": "string",
      "enum": ["CAx→QOx (QAIM-2)", "CAx→QOx (QAOA)", "CAx→QOx (Annealing)"],
      "description": "Bridge method for CAx to QOx transition"
    },
    "algorithm": {
      "type": "object",
      "description": "Quantum algorithm configuration",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["QAOA", "VQE", "Annealing", "QUBO"],
          "description": "Quantum algorithm type"
        },
        "parameters": {
          "type": "object",
          "description": "Algorithm-specific parameters"
        },
        "hardware": {
          "type": "object",
          "properties": {
            "backend": {
              "type": "string",
              "enum": ["simulator", "ibm_quantum", "dwave", "rigetti"],
              "description": "Target quantum hardware backend"
            },
            "qubits": {
              "type": "integer",
              "minimum": 1,
              "description": "Required number of qubits"
            }
          }
        }
      }
    },
    "roundtrip": {
      "type": "object",
      "description": "Roundtrip validation configuration",
      "properties": {
        "exports": {
          "type": "array",
          "items": {"type": "string"},
          "description": "CAD exports used for validation"
        },
        "validation": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["CAE/structural", "CAE/thermal", "CFD/aero", "Manufacturing/tooling"]
          },
          "description": "Validation methods for quantum solutions"
        },
        "tolerance": {
          "type": "object",
          "properties": {
            "objective": {"type": "number", "minimum": 0},
            "constraints": {"type": "number", "minimum": 0}
          },
          "description": "Convergence tolerances"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Problem creation timestamp"
        },
        "author": {
          "type": "string",
          "description": "Problem author"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Problem version (semantic versioning)"
        },
        "tags": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Problem classification tags"
        }
      }
    },
    "utcs": {
      "type": "object",
      "properties": {
        "canonical_hash": {
          "type": "string",
          "pattern": "^(sha256:[a-f0-9]{64}|TBD)$",
          "description": "UTCS canonical hash"
        },
        "evidence_path": {
          "type": "string",
          "description": "Path to QS evidence"
        }
      }
    }
  }
}