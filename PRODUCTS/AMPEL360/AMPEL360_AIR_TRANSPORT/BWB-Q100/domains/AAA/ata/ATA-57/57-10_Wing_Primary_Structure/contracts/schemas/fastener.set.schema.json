{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/ata-57-10/fastener.set.schema.json",
  "title": "Fastener Set",
  "description": "Fastener set specification used by joints in ATA-57-10.",
  "type": "object",
  "required": ["set_id", "spec", "diameter_mm", "quantity", "version"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "set_id": {
      "type": "string",
      "pattern": "FST-[A-Z0-9_-]{3,}"
    },
    "spec": {
      "type": "string",
      "description": "e.g., NAS, HI-LOK, custom PN"
    },
    "material": {
      "type": "string",
      "enum": ["Ti", "CRES", "Al", "Inconel", "Other"]
    },
    "finish": {
      "type": "string"
    },
    "diameter_mm": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "grip_mm": {
      "type": "number",
      "minimum": 0
    },
    "washers": {
      "type": "string"
    },
    "nuts": {
      "type": "string"
    },
    "torque_spec_Nm": {
      "type": "object",
      "properties": {
        "dry": {
          "type": "number",
          "minimum": 0
        },
        "lubed": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "sealant_callout": {
      "type": "string"
    },
    "quantity": {
      "type": "integer",
      "minimum": 1
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
