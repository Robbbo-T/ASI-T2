{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/ata-57-20/acceptance.metric.schema.json",
  "title": "Acceptance Metric",
  "description": "Generic acceptance/inspection metric for ATA-57-20.",
  "type": "object",
  "required": ["version", "metric_id", "name", "unit"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "metric_id": {
      "type": "string",
      "pattern": "^ACPT-[A-Z0-9_-]{3,}$"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "unit": {
      "type": "string",
      "description": "e.g., mm, Âµm, Nm"
    },
    "target": {
      "type": "number"
    },
    "limit_lower": {
      "type": "number"
    },
    "limit_upper": {
      "type": "number"
    },
    "method_ref": {
      "type": "string",
      "description": "Procedure/DM reference"
    },
    "evidence_refs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
