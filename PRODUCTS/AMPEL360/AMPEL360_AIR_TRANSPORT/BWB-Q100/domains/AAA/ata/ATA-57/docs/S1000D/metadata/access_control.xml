<?xml version="1.0" encoding="UTF-8"?>
<accessControl xmlns="http://www.s1000d.org/csdb/access"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="../schemas/access_control.xsd">
  <roles>
    <role id="author"/>
    <role id="reviewer"/>
    <role id="integrator"/>
    <role id="qa"/>
    <role id="auditor"/>
  </roles>
  <policies>
    <policy role="author"    resource="data_modules/*" action="create,edit,propose"/>
    <policy role="reviewer"  resource="data_modules/*" action="review,comment"/>
    <policy role="integrator" resource="publication_modules/*" action="merge,release"/>
    <policy role="qa"        resource="validation/*" action="execute,gate"/>
    <policy role="auditor"   resource="indices/*" action="read"/>
  </policies>
</accessControl>