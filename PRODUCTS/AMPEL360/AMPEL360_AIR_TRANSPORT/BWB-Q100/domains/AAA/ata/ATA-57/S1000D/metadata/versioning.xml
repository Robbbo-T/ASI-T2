<?xml version="1.0" encoding="UTF-8"?>
<versioning xmlns="http://www.s1000d.org/csdb/versioning"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../schemas/versioning.xsd">
  <git>
    <branch naming="copilot/*,feature/*,release/*"/>
    <tag pattern="BWQ1-ATA57-R{major}.{minor}"/>
  </git>
  <s1000d>
    <issueNumber increment="major-change"/>
    <inWork values="01-99 for WIP, 00 for released"/>
  </s1000d>
  <mapping>
    <rule>Release tag MUST include snapshot of indices/ and DMRL</rule>
    <rule>Publication PM and DMRL MUST reference released DMs only</rule>
  </mapping>
</versioning>