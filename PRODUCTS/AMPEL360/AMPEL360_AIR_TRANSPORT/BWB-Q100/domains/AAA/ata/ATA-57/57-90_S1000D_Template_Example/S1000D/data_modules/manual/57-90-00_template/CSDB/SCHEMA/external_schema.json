{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ideale.eu/schemas/inspection-event.json",
  "title": "Inspection Event Schema",
  "description": "External JSON Schema for validation of inspection event payloads referenced by S1000D data modules",
  "type": "object",
  "required": ["eventType", "timestamp", "inspector", "findings"],
  "properties": {
    "eventType": {
      "type": "string",
      "description": "Type of inspection event",
      "enum": ["visual", "ndt_ut", "ndt_ec", "ndt_thermography", "dimensional"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of inspection"
    },
    "inspector": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Inspector employee ID or certification number"
        },
        "name": {
          "type": "string",
          "description": "Inspector name"
        },
        "certification": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Relevant certifications (e.g., NDT Level II)"
        }
      }
    },
    "location": {
      "type": "object",
      "properties": {
        "station": {
          "type": "string",
          "description": "Aircraft station or reference location"
        },
        "zone": {
          "type": "string",
          "description": "Maintenance zone"
        },
        "ata_chapter": {
          "type": "string",
          "pattern": "^[0-9]{2}(-[0-9]{2}(-[0-9]{2})?)?$",
          "description": "ATA chapter reference"
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["finding_id", "severity", "description"],
        "properties": {
          "finding_id": {
            "type": "string",
            "description": "Unique finding identifier"
          },
          "severity": {
            "type": "string",
            "enum": ["none", "minor", "major", "critical"],
            "description": "Finding severity level"
          },
          "description": {
            "type": "string",
            "description": "Detailed finding description"
          },
          "action_required": {
            "type": "string",
            "description": "Required corrective action"
          },
          "photos": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri"
            },
            "description": "URLs or paths to supporting photos"
          }
        }
      }
    },
    "equipment": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "equipment_id": {
            "type": "string",
            "description": "Equipment identifier"
          },
          "equipment_type": {
            "type": "string",
            "description": "Type of inspection equipment used"
          },
          "calibration_date": {
            "type": "string",
            "format": "date",
            "description": "Last calibration date"
          }
        }
      }
    },
    "compliance": {
      "type": "object",
      "properties": {
        "mpd_task": {
          "type": "string",
          "description": "MPD task reference"
        },
        "interval": {
          "type": "string",
          "description": "Inspection interval (e.g., '500 FH', '12 MO')"
        },
        "last_performed": {
          "type": "string",
          "format": "date",
          "description": "Date last performed"
        },
        "next_due": {
          "type": "string",
          "format": "date",
          "description": "Next inspection due date"
        }
      }
    }
  }
}
