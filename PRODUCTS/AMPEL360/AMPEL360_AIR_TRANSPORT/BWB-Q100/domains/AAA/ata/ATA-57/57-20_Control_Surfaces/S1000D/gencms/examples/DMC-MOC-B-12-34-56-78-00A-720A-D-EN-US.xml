<?xml version="1.0" encoding="UTF-8"?>
<dmodule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://www.s1000d.org/S1000D_6-0/xml_schema_flat/procedural.xsd">
  <identAndStatusSection>
    <dmAddress>
      <dmIdent>
        <dmCode modelIdentCode="MOC" systemDiffCode="B"
                systemCode="12" subSystemCode="34" subSubSystemCode="56"
                assyCode="78" disassyCode="00" disassyCodeVariant="A"
                infoCode="720" infoCodeVariant="A" itemLocationCode="D"/>
        <language languageIsoCode="en" countryIsoCode="US"/>
        <issueInfo issueNumber="001" inWork="00"/>
      </dmIdent>
      <dmAddressItems>
        <dmTitle>
          <techName>Generic Component</techName>
          <infoName>Removal and Installation</infoName>
        </dmTitle>
        <security securityClassification="01-unclassified"/>
      </dmAddressItems>
    </dmAddress>

    <dmStatus issueType="new">
      <!-- Slim, neutral effectivity shells -->
      <applic id="APPL-ALL">
        <assert/>
      </applic>
      <applic id="APPL-LH">
        <assert/>
      </applic>
      <applic id="APPL-RH">
        <assert/>
      </applic>

      <applicCrossRefTable>
        <applicCrossRef applicPropertyIdent="APPL-ALL">
          <applicText>All units</applicText>
        </applicCrossRef>
        <applicCrossRef applicPropertyIdent="APPL-LH">
          <applicText>Left-hand only</applicText>
        </applicCrossRef>
        <applicCrossRef applicPropertyIdent="APPL-RH">
          <applicText>Right-hand only</applicText>
        </applicCrossRef>
      </applicCrossRefTable>
    </dmStatus>
  </identAndStatusSection>

  <content>
    <procedure>
      <preliminaryRqmts>
        <safetyRqmts>
          <warning><para>Isolate all power sources before beginning work.</para></warning>
          <caution><para>ESD-sensitive devices. Use grounded protection.</para></caution>
          <note><para>Read the entire procedure before starting.</para></note>
        </safetyRqmts>

        <reqSupportEquips>
          <reqSupportEquip>
            <name>Torque Wrench (digital)</name>
            <quantity>1</quantity>
            <applicRef applicPropertyIdent="APPL-ALL"/>
          </reqSupportEquip>
          <reqSupportEquip>
            <name>Alignment Tool</name>
            <quantity>1</quantity>
            <applicRef applicPropertyIdent="APPL-LH"/>
          </reqSupportEquip>
        </reqSupportEquips>

        <reqConsumables>
          <reqConsumable>
            <name>Threadlocker (medium strength)</name>
            <quantity>as required</quantity>
          </reqConsumable>
        </reqConsumables>

        <reqSpares>
          <!-- example shell for R/I â†” IPD keying -->
          <reqSpare csn="GEN-ASSY-01" itemRef="ITEM-0001"/>
        </reqSpares>

        <refs>
          <!-- sibling descriptive -->
          <dmRef>
            <dmRefIdent>
              <dmCode modelIdentCode="MOC" systemDiffCode="B"
                      systemCode="12" subSystemCode="34" subSubSystemCode="56"
                      assyCode="78" disassyCode="00" disassyCodeVariant="A"
                      infoCode="040" infoCodeVariant="A" itemLocationCode="D"/>
            </dmRefIdent>
            <dmRefAddress>
              <dmTitle><techName>Generic Component</techName><infoName>Description</infoName></dmTitle>
            </dmRefAddress>
          </dmRef>

          <!-- sibling IPD -->
          <dmRef>
            <dmRefIdent>
              <dmCode modelIdentCode="MOC" systemDiffCode="B"
                      systemCode="12" subSystemCode="34" subSubSystemCode="56"
                      assyCode="78" disassyCode="00" disassyCodeVariant="A"
                      infoCode="941" infoCodeVariant="A" itemLocationCode="D"/>
            </dmRefIdent>
            <dmRefAddress>
              <dmTitle><techName>Generic Component</techName><infoName>Illustrated Parts Data</infoName></dmTitle>
            </dmRefAddress>
          </dmRef>
        </refs>
      </preliminaryRqmts>

      <mainProcedure>
        <proceduralStep>
          <title>Prepare for Maintenance</title>
          <para>Ensure the area is safe and the component is accessible.</para>
          <applicRef applicPropertyIdent="APPL-ALL"/>
        </proceduralStep>

        <proceduralStep>
          <title>Remove Component</title>
          <para>Disconnect harnesses and remove fasteners in reverse installation order.</para>
          <figure>
            <title>Removal Overview</title>
            <graphic infoEntityIdent="FIG-REMOVAL-OVERVIEW"/>
          </figure>
          <applicRef applicPropertyIdent="APPL-ALL"/>
        </proceduralStep>

        <proceduralStep>
          <title>Install Component</title>
          <para>Position the component and install fasteners. Apply threadlocker if required.</para>
          <para>Torque fasteners to specification (see torque table or standard practice).</para>
          <applicRef applicPropertyIdent="APPL-LH"/>
        </proceduralStep>
      </mainProcedure>

      <concludingRqmts>
        <closeRqmts>
          <inspection><para>Verify alignment and record results per maintenance records policy.</para></inspection>
        </closeRqmts>
        <refs>
          <!-- generic inspection procedure -->
          <dmRef>
            <dmRefIdent>
              <dmCode modelIdentCode="MOC" systemDiffCode="B"
                      systemCode="12" subSystemCode="00" subSubSystemCode="00"
                      assyCode="00" disassyCode="00" disassyCodeVariant="A"
                      infoCode="520" infoCodeVariant="A" itemLocationCode="D"/>
            </dmRefIdent>
            <dmRefAddress>
              <dmTitle><techName>Standard Inspection/Test</techName><infoName>Generic Procedure</infoName></dmTitle>
            </dmRefAddress>
          </dmRef>
        </refs>
      </concludingRqmts>
    </procedure>
  </content>
</dmodule>
