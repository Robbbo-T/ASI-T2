{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://asi-t2.org/schemas/evidence/file/v1.0.0",
  "title": "Evidence File Reference Schema",
  "description": "Schema for CO-3.23: Evidence file reference configurable object",
  "type": "object",
  "required": [
    "evidence_id",
    "type",
    "uri",
    "sha256"
  ],
  "properties": {
    "evidence_id": {
      "type": "string",
      "description": "Unique identifier for this evidence file",
      "pattern": "^EVID-[0-9]{8}$"
    },
    "type": {
      "type": "string",
      "description": "Type of evidence",
      "enum": [
        "OOC",
        "TORQUE",
        "CURE",
        "NDT",
        "PRESSURE",
        "BOND",
        "EMI",
        "LEAK_TEST",
        "VISUAL_INSPECTION",
        "DIMENSIONAL",
        "WEIGHT_BALANCE",
        "FUNCTIONAL_TEST",
        "OTHER"
      ]
    },
    "uri": {
      "type": "string",
      "description": "URI to the evidence file",
      "format": "uri"
    },
    "sha256": {
      "type": "string",
      "description": "SHA-256 checksum of the evidence file",
      "pattern": "^[a-f0-9]{64}$"
    },
    "form_link": {
      "type": "string",
      "description": "Link to associated QA form",
      "pattern": "^FORM-QA-[0-9]{2}-[0-9]{2}-[0-9]{2}$"
    },
    "description": {
      "type": "string",
      "description": "Description of the evidence",
      "minLength": 1,
      "maxLength": 500
    },
    "part_number": {
      "type": "string",
      "description": "Associated part number",
      "pattern": "^[A-Z0-9-]{5,20}$"
    },
    "serial_number": {
      "type": "string",
      "description": "Associated serial number",
      "pattern": "^SN-[A-Z0-9]{6,12}$"
    },
    "work_order": {
      "type": "string",
      "description": "Associated work order number",
      "pattern": "^WO-[0-9]{6,10}$"
    },
    "task_reference": {
      "type": "string",
      "description": "Reference to associated task",
      "pattern": "^TASK-(REMOVAL|INSTALL)-[0-9]{4}$"
    },
    "capture_date": {
      "type": "string",
      "description": "Date/time when evidence was captured",
      "format": "date-time"
    },
    "captured_by": {
      "type": "string",
      "description": "Person who captured the evidence"
    },
    "inspector": {
      "type": "string",
      "description": "Inspector who verified/approved"
    },
    "inspection_stamp": {
      "type": "string",
      "description": "Inspector stamp/badge number",
      "pattern": "^INSP-[0-9]{4,6}$"
    },
    "file_format": {
      "type": "string",
      "description": "File format/MIME type",
      "enum": [
        "application/pdf",
        "image/jpeg",
        "image/png",
        "application/json",
        "text/csv",
        "application/xml",
        "video/mp4"
      ]
    },
    "file_size_bytes": {
      "type": "integer",
      "description": "File size in bytes",
      "minimum": 0
    },
    "retention_period_years": {
      "type": "integer",
      "description": "Required retention period in years",
      "minimum": 1,
      "maximum": 99
    },
    "classification": {
      "type": "string",
      "description": "Classification level",
      "enum": [
        "PUBLIC",
        "INTERNAL",
        "CONFIDENTIAL",
        "RESTRICTED"
      ]
    },
    "qis_anchor": {
      "type": "object",
      "description": "QS/UTCS anchor for this evidence",
      "required": ["canonical_hash", "timestamp"],
      "properties": {
        "canonical_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "sbom_uri": {
          "type": "string",
          "format": "uri"
        },
        "signer": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "created_by": {
          "type": "string"
        },
        "created_date": {
          "type": "string",
          "format": "date-time"
        },
        "modified_by": {
          "type": "string"
        },
        "modified_date": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "additionalProperties": false
}
