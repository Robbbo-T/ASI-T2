{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://asi-t2.org/schemas/ipd/item/v1.0.0",
  "title": "IPD Item/Callout Schema",
  "description": "Schema for CO-3.2: IPD Item/Callout configurable object",
  "type": "object",
  "required": [
    "item_no",
    "PN",
    "nomenclature",
    "qty",
    "uom"
  ],
  "properties": {
    "item_no": {
      "type": "string",
      "description": "Item number/callout identifier in the IPD figure",
      "pattern": "^[0-9]{1,4}$"
    },
    "PN": {
      "type": "string",
      "description": "Part Number",
      "pattern": "^[A-Z0-9-]{5,20}$"
    },
    "nomenclature": {
      "type": "string",
      "description": "Part name/description",
      "minLength": 1,
      "maxLength": 200
    },
    "qty": {
      "type": "number",
      "description": "Quantity required",
      "minimum": 0
    },
    "uom": {
      "type": "string",
      "description": "Unit of measure",
      "enum": ["EA", "FT", "IN", "M", "MM", "KG", "LB", "L", "GAL", "SET", "LOT"]
    },
    "ipc_note": {
      "type": "string",
      "description": "Notes or special instructions for this item",
      "maxLength": 500
    },
    "effectivity_expr": {
      "type": "string",
      "description": "Effectivity expression (MSN ranges, options, etc.)",
      "pattern": "^[A-Z0-9:,\\-()\\s&|]*$"
    },
    "figure_ref": {
      "type": "string",
      "description": "Reference to parent IPD figure",
      "pattern": "^FIG-[0-9]{4}-[0-9]{2}$"
    },
    "cage_code": {
      "type": "string",
      "description": "Manufacturer CAGE code",
      "pattern": "^[A-Z0-9]{5}$"
    },
    "alternate_pns": {
      "type": "array",
      "description": "List of alternate part numbers",
      "items": {
        "type": "string",
        "pattern": "^[A-Z0-9-]{5,20}$"
      }
    },
    "revision": {
      "type": "string",
      "description": "Part revision/dash number",
      "pattern": "^[A-Z0-9-]{1,10}$"
    },
    "criticality": {
      "type": "string",
      "description": "Criticality classification",
      "enum": ["CRITICAL", "ESSENTIAL", "STANDARD"]
    },
    "serialization_required": {
      "type": "boolean",
      "description": "Whether this part requires serial number tracking"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "created_by": {
          "type": "string"
        },
        "created_date": {
          "type": "string",
          "format": "date-time"
        },
        "modified_by": {
          "type": "string"
        },
        "modified_date": {
          "type": "string",
          "format": "date-time"
        },
        "approved_by": {
          "type": "string"
        },
        "approval_date": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "additionalProperties": false
}
